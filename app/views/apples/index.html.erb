<div class="page-header">
  <h1>
    Apples
    <a href="/apples/new" class="btn btn-lg btn-success">New Apple</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @apples.each do |apple| %>
      <tr>
        <td><%= apple.name %></td>
        <td>
          <a href="/apples/<%= apple.id %>" class="btn btn-primary">Show</a>
          <a href="/apples/<%= apple.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_apple/<%= apple.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @apples, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
